{
	"name": "Bun Test",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers-contrib/features/turborepo-npm:1": { "version": "2.3.4" },
		"ghcr.io/raine-works/devcontainer-features/bun:latest": { "version": "1.2.0" },
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"mounts": [
		"source=${env:HOME}${env:USERPROFILE}/.config/gh,target=/home/vscode/.config/gh,type=bind"
	],
	"containerEnv": {
		"NODE_ENV": "development",
		"TZ": "UTC"
	},
	"customizations": {
		"vscode": {
			"extensions": ["mhutchie.git-graph", "waderyan.gitblame", "esbenp.prettier-vscode"]
		}
	}
}